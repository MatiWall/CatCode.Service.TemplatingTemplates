{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "v1alpha1",
    "title": "Application Entity",
    "description": "",
    "type": "object",
    "properties": {
      "apiVersion": {"type": "string"},
      "kind": {
        "type": "string",
        "const": "Application"
      },
      "metadata": {
        "type": "object",
        "properties": {
        "name": {
            "type": "string"
            },
          "description": {
            "type": "string"
          }
        },
        "required": ["name", "description"]
      },
      "spec": {
        "type": "object",
        "properties": {
          "owner": {
            "type": "string"
          }
        },
        "required": ["owner"]
      }
    },
    "required": ["apiVersion", "kind", "metadata", "spec"]
  }
  